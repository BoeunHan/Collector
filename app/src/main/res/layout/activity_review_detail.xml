<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.han.collector.viewmodel.ItemViewModel"/>
        <variable
            name="id"
            type="Integer" />
        <variable
            name="image"
            type="String" />
        <variable
            name="title"
            type="String" />
        <variable
            name="like"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.AddMovieActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:theme="@style/CustomActionBar"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextColor="@color/textColor"
                app:contentScrim="@color/white"
                app:expandedTitleTextColor="@color/white"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:title="@{title}">

                <ImageView
                    android:id="@+id/ivMovieImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:layout_collapseMode="parallax"
                    app:srcCompat="@drawable/cat_image"
                    app:image="@{image}"
                    android:foreground="@drawable/gradient_shape"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarMovieDetail"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@+id/nestedScrollView"
            app:layout_anchorGravity="center"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/detailFragmentContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/secondaryColor"
            android:baselineAlignBottom="false"
            android:src="@{like? @drawable/ic_like : @drawable/ic_dislike}"
            app:backgroundTint="@color/secondaryColor"
            app:fabSize="normal"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="end|bottom"
            app:tint="@color/white"
            android:onClick="@{()->viewModel.setLike(id, like)}"
            android:contentDescription="likebutton" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>